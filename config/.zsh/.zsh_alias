# git 字数检查
alias gitwa='git diff --word-diff=porcelain  | grep -e "^+[^+]" | wc -m | xargs'
alias gitwd='git diff --word-diff=porcelain  | grep -e "^-[^-]" | wc -m | xargs'
alias gitwdd='git diff --word-diff=porcelain | grep -e"^+[^+]" -e"^-[^-]"|sed -e's/.//'|sort|uniq -d|wc -m|xargs'
alias gitw='echo $(($(gitwa) - $(gitwd)))'

function boe_push() {
	source ~/.secret
	now=$(dirname $(pwd))
	if [[ ! "$now" == "/Users/bytedance/Codes" ]]; then
		echo "当前不在 Codes 目录下的一级目录"
		return
	fi

	rsync -av --delete $(pwd) $SECRET_NAME@$SECRET_BOE_IP:/home/$SECRET_NAME/
}

function boe_pull() {
	source ~/.secret
	now=$(dirname $(pwd))
	if [[ ! "$now" == "/Users/bytedance/Codes" ]]; then
		echo "当前不在 Codes 目录下的一级目录"
		return
	fi
	rsync -av --delete $SECRET_NAME@$SECRET_BOE_IP:/home/$SECRET_NAME/$(basename $(pwd)) $now/
}

function boe() {
	source ~/.secret
	ssh $SECRET_NAME@$SECRET_BOE_IP
}

